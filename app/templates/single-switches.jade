						h5.grey-text.text-darken-2 Equipos
					.row.col-xs-6.middle-xs.end-xs
						a.text-indigo.uppercase.button-create(data-activates="agregar-equipo-al-sw") Agregar nuevo equipo
					.row.col-xs-12.no-padding						
						ul.collection.row.col-xs-12.no-padding
							div#hola
							li.collection-item.row.col-xs-12.middle-xs
								.row.col-xs-4.start-xs.no-padding.left-align
									b#puerto 
								.row.col-xs-4.start-xs.no-padding.left-align
									b#equipo 
							//- li.collection-item.row.col-xs-12.middle-xs(ng-repeat='equipo in PuertosEquipos.equipos')
							//- 	.row.col-xs-4.start-xs.no-padding.left-align
							//- 		a(ui-sref="single_equipo({ id: equipo.id })").blue-text Equipo: 
							//- 			b {{ equipo.name }}
							//- 	.row.col-xs-4.start-xs.no-padding.left-align
							//- 		a(ui-sref="single_equipo({ id: equipo.id })").blue-text Puerto: 
							//- 			b {{ PuertosEquipos.name }}
				div.divider
				.row.col-xs-12.middle-xs(style="padding-top:20px;padding-bottom:20px;")
					.row.col-xs-6.middle-xs.start-xs
						.material-icons.grey-text.text-darken-2(style="margin-right:20px;") dns
						h5.grey-text.text-darken-2 Servidores
					.row.col-xs-6.middle-xs.end-xs
						a.text-indigo.uppercase(ng-click="createSwPu(2,1)") Agregar nuevo servidor						
				div.divider
				.row.col-xs-12.middle-xs(style="padding-top:20px;padding-bottom:20px;")
					.row.col-xs-6.middle-xs.start-xs
						.material-icons.grey-text.text-darken-2(style="margin-right:20px;") view_comfy
						h5.grey-text.text-darken-2 Otros Switches
					.row.col-xs-6.middle-xs.end-xs
						a.text-indigo.uppercase(ng-click="createSwPu(2,1)") Agregar nuevo Switche						
				div.divider
		.row.col-xs-4.table__content.hide(style="max-height:500px;")
			ul.collection.with-header.col-xs-12.white.no-padding
				li.collection-header.start-xs
					h5.light.grey-text.text-darken-3 Informacion del Switche
				li.collection-item 
					b Nombre: 
					| {{switche.name}}
				li.collection-item
					b Modelo: 
					| {{switche.modelo}}
				li.collection-item 
					b Sistema Operativo: 
					| {{switche.so}}
				li.collection-item
					b Ip: 
					| {{switche.ip}}

//- Agregar Equipo Al Switche
ul#agregar-equipo-al-sw.side-nav
	.row.col-xs-12.indigo.middle-xs(style='height: 130px;')
		.row.col-xs-11.no-padding
			h4.light.white-text Agregar equipo 
	.row.col-xs-12.no-padding.transparent.progress.progress-update.hide(style="margin:0px;")
		.indeterminate.amber.accent-3
	.row.col-xs-12.no-padding(style="margin-top:30px;")
		form.col-xs-12
			.input-field
				label#equipo Seleciona un puerto
				<select class="" material-select watch>
				<option ng-repeat='puerto in puertos' value='{{puerto.id}}'>{{ eq.name }}</option>
				</select>
			.input-field
				label#puerto Seleciona un equipo
				<select class="" material-select multiple watch>
				<option ng-repeat='eq in equipos' value='{{eq.id}}'>{{ eq.name }}</option>
				</select>
			.input-field.row
				input(type="submit" value="Confirmar" ng-click="createSwPu(2,1)").col-xs-12.btn.z-depth-0.green